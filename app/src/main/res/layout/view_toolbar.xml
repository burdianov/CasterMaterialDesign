<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/toolbar_image"
        android:src="@drawable/vct_happyface"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/ab_custom_text"
        android:layout_toRightOf="@+id/toolbar_image"
        android:textColor="@color/white"
        android:text="Updated Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ab_custom_btn"
        android:layout_toRightOf="@+id/toolbar_image"
        android:text="Subtitle Text"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_below="@id/ab_custom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>